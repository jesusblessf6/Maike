@model List<Management.Models.CommodityTypeViewVM>

<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="#">设置</a></li>
      <li><a href="#">金属</a></li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-7">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-table"></i>
          <span>金属类型</span>
        </div>
        <div class="box-icons">
          <a href="#" onclick="javascript:addCommodityType();">
            <i class="fa fa-plus"></i>
          </a>
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="expand-link">
            <i class="fa fa-expand"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
        <div class="no-move"></div>
      </div>
      <div class="box-content" style="position: relative; overflow: auto; max-height:450px;">
        <table class="table table-condensed table-hover table-striped" id="commodityTypeTable">
          <thead>
            <tr>
              <th>#</th>
              <th>名称</th>
              <th>金属</th>
              <th>备注</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            @{
              for (int i = 0; i < Model.Count; i++)
              {
                <tr>
                  <td>@(i+1)</td>
                  <td>@Html.DisplayFor(o => o[i].Name)</td>
                  <td>@Html.DisplayFor(o => o[i].CommodityName)</td>
                  <td>@Html.DisplayFor(o => o[i].Description)</td>
                  <td><a href="#">编辑</a></td>
                </tr>
              }
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-5" id="editPanel">
    
  </div>
</div>


<script>
  function addCommodityType() {
    LoadAjaxContent2("/CommodityType/Create", function(data) {
      $('#editPanel').html(data);
    });
  }

  $(document).ready(function () {
    $('#commodityTypeTable').DataTable({
      paging: true,
      filter: false,
      oLanguage:{sUrl:"/Content/devoops/plugins/datatables/plugins/i18n/Chinese.json"}
    });
    WinMove();
  });
</script>