@{
    ViewBag.Title = "金属设置";
}

<style>
  .innerMenu{}
</style>

<div class="container-fluid">
  <div class="row">
    <div id="breadcrumb" class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="#">设置</a></li>
        <li><a href="#">金属</a></li>
      </ol>
    </div>
  </div>
  <div class="row">

    <ul id="messages-menu" class="nav msg-menu">
      <li>
        <a href="#" data-address="/Commodity/Index" class="innerMenu">
          <i class="fa fa-inbox"></i>
          <span class="hidden-xs">金属</span>
        </a>
      </li>
      <li>
        <a href="#" class="innerMenu" data-address="/CommodityType/Index">
          <i class="fa fa-inbox"></i>
          <span class="hidden-xs">金属类型</span>
        </a>
      </li>
      <li>
        <a href="#" class="innerMenu" data-address="/Brand/Index">
          <i class="fa fa-inbox"></i>
          <span class="hidden-xs">品牌</span>
        </a>
      </li>
    </ul>
    <div class="col-sm-10" id="commodityMain"></div>
  </div>
</div>

<script>

  $(document).ready(function() {
    $('#content').addClass('full-content');

    $('.innerMenu').on('click', function() {
      var addr = $(this).attr('data-address');
      LoadAjaxContent2(addr, loadSuc);
      if (!$(this).hasClass('active')) {
        $(this).addClass('active');
        $('.innerMenu').not(this).removeClass('active');
      }
    });

    $('#commodityMain').css('margin-left', $('#messages-menu').width());
  });
  
  function loadSuc(data) {
    $('#commodityMain').html(data);
  }
</script>
